/* pages/client/client.wxss */page {
  background: white;
  font-size: 28rpx;
}

.item-row1 {
  height: 60px;
  display: flex;
}

.item-row2 {
  height: 60px;
  display: flex;
}

.item-row3 {
  height: 40px;
  vertical-align: middle;
  display: flex;
}

.item-name {
  font-size: 40rpx;
  width: 40%;
  text-align: center;
}

.item-price {
  font-size: 35rpx;
  width: 60%;
  text-align: center;
}

.item-type {
  font-size: 35rpx;
  width: 40%;
  text-align: center;
}

.item-count {
  font-size: 35rpx;
  width: 40%;
  text-align: center;
}

.item-number {
  font-size: 35rpx;
  width: 30%;
  text-align: center;
}

.item-input{
  background: white;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}

.item-button {
  color: white;
  background: #009688;
}

.item-hover {
  background-color: #4caf50;
  color: white;
}

.main {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.sub-content {
  width: 90%;
  height: 180px;
}

.content {
  width: 100%;
  height: 170px;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  vertical-align: middle;
  /* text-align: center; */
  background: #f0f0f0;
}
