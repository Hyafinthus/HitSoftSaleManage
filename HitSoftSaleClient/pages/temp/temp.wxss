page {
  background: white;
  font-size: 28rpx;
}

.item-row1 {
  height: 40px;
  display: flex;
}

.item-row2 {
  height: 40px;
  display: flex;
}

.item-row3 {
  height: 40px;
  vertical-align: middle;
  display: flex;
}

.item-name{
  font-size: 40rpx;
  width: 40%;
  text-align: center;
}

.item-price{
  font-size: 35rpx;
  width: 60%;
  text-align: center;
}

.item-type{
  font-size: 30rpx;
  width: 40%;
  text-align: center;
}

.item-count{
  font-size: 35rpx;
  width: 45%;
  text-align: center;
}

.item-number{
  font-size: 35rpx;
  width: 35%;
  text-align: center;
}

.item-button{
  width: 5px;
  color:white;
  background: #009688;
}

.main {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.content {
  width: 90%;
  height: 120px;
  border-top-left-radius:10px;
  border-bottom-left-radius:10px;
  border-top-right-radius:10px;
  border-bottom-right-radius:10px;
  vertical-align: middle;
  /* text-align: center; */
  background: #f0f0f0;
}
