page {
  background: white;
  font-size: 28rpx;
}

.item-row1 {
  height: 40px;
  display: flex;
}

.item-row2 {
  height: 40px;
  display: flex;
}

.item-row3 {
  height: 40px;
  vertical-align: middle;
  display: flex;
}

.item-row4 {
  height: 40px;
  vertical-align: middle;
  display: flex;
  align-items: center;
  justify-content: center; 
}


.item-name {
  font-size: 40rpx;
  width: 40%;
  text-align: center;
}

.item-name1 {
  font-size: 40rpx;
  width: 100%;
  text-align: center;
}

.item-price {
  font-size: 35rpx;
  width: 60%;
  text-align: center;
}

.item-type {
  font-size: 35rpx;
  width: 40%;
  text-align: center;
}

.item-count {
  font-size: 35rpx;
  width: 40%;
  text-align: center;
}

.item-sumup {
  font-size:40rpx;
  width: 70%;
  text-align: right;
}

.item-number {
  font-size: 35rpx;
  width: 30%;
  text-align: center;
}

.item-button {
  width: 30%;
  color: white;
  background: #009688;
  align-content: right;
}

.item-button-reduce {
  width: 30%;
  border: 1px solid #009688;
  color:  #009688;
  background:white;
}

.item-hover {
  background-color: #4caf50;
  color: white;
}

.main {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.sub-content {
  width: 90%;
  height: 130px;
}

.content {
  width: 100%;
  height: 120px;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  vertical-align: middle;
  /* text-align: center; */
  background: #f0f0f0;
}
