page {
  background: white;
  font-size: 28rpx;
}


.item-row {
  height: 20px;
  display: flex;
}

.item-row1 {
  height: 40px;
  display: flex;
}

.item-input{
  background: white;
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}


.item-name {
  font-size: 30rpx;
  width: 30%;
  text-align: center;
}

.item-button {
  color: white;
  background: #009688;
}

.item-hover {
  background-color: #4caf50;
  color: white;
}

.main {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.sub-content {
  width: 90%;
  height: 170px;
}

.content {
  width: 100%;
  height: 150px;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
  vertical-align: middle;
  /* text-align: center; */
  background: #f0f0f0;
}
